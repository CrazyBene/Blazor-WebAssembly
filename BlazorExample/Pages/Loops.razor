@page "/loops"

<h1>Loop examples</h1>

<p>For Loop</p>

@for(int c = 1; c <= 4; c++)
{
    var ct = c;

    <div>
        Loop: @ct
    </div>
}

<br />
<br />

<p>Foreach Loop</p>

@foreach (var c in elements)
{
    <div>
        Element: @c
    </div>
}

@code {
    private int[] elements = [3, 1, 2];
}